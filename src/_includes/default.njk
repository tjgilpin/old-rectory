<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - {{ settings.title }}</title>
    <meta name="description" content="{{ settings.description | default(settings.title) }}">
    <meta name="generator" content="{{ eleventy.generator }}">    
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ process.env.URL | default('http://localhost:8080') }}{{ page.url }}">
    <meta property="og:site_name" content="{{ settings.title }}">
    <meta property="og:locale" content="{{ settings.locale }}">
    <meta property="og:title" content="{{ settings.title }}">
    <meta property="og:description" content="{{ settings.description | default(settings.title) }}">
    <meta property="og:image" content="{{ settings.image }}">
    <meta property="og:image:width" content="{{ settings.imageWidth }}">
    <meta property="og:image:height" content="{{ settings.imageHeight }}">
    <meta property="og:image:alt" content="{{ settings.imageAlt }}">
    <link rel="stylesheet" href="/assets/css/style.css">
    {% if gallery %}
    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  {% endif %}         
  </head>
  <body class="page_{{ title | slugify }}{% if parent_page %} subpage subpage_{{ parent_page | slugify }}{% endif %}">
    <header>
      <a href="/"><img src="{{ settings.logo }}" alt="{{ settings.name }}" /></a>
      <button class="hamburger active" aria-label="Open menu">
        <div></div>
        <div></div>
        <div></div>
      </button>      
      <span class="close-btn" id="close">&times;</span>      
      <nav aria-label="Main">
        <ul>
          {% for entry in collections.all | eleventyNavigation %}
              <li class="{% if entry.url == page.url %}active{% endif %} {{ entry.title | slugify }}">
                <a href="{{ entry.url }}">{{ entry.title }}</a>
              </li>
          {% endfor %}
        </ul>
      </nav>
      <img src="/assets/img/michelin-2024.png" alt="Michelin 2024" class="michelin">
    </header>
    <main>
      {% if title and title != 'Home'  %}
        <header>
          {% if headerimage %}
            <img src="{{ headerimage }}" alt="{{ title }}" class="hero" />
          {% endif %}          
          <h1>
            {{ title }}
          </h1>
        </header>
      {% else %}
      <header>
        <img src="{{ home.headerlogo }}" class="logo">
        <img src="{{ home.headerimage }}" class="hero">
      </header>
      {% endif %}

      {% if parent_page %}
        {% set navPages = collections.all | eleventyNavigationBreadcrumb(parent_page, { includeSelf: true }) %}
        <ul class="breadcrumbs">
        {% for entry in navPages %}
          <li><a href="/">Home</a></li>
          <li><a href="{{ entry.url }}">{{ entry.title }}</a></li>
          <li>{{ title }}</li>
        {% endfor %}
      </ul>
      {% endif %}
      {% if title == 'Home'  %}
      <div class="content">{% for section in home.sections %}
        <section class="section-panel">
          <div class="image">
            <a href="{{ section.url }}">
              <img src="{{ section.sectionimage }}" alt="{{ section.title }}">
            </a>
          </div>
          <div class="title">
            <a href="{{ section.url }}">
              <h2>{{ section.title }}</h2>
            </a>
          </div>
          <div class="text">
            <a href="{{ section.url }}">
              <p>{{ section.body }}</p>
            </a>
            <a href="{{ section.url }}" class="cta">{{section.cta}}</a>
          </div>
        </section>{% endfor %}        
      </div>
      <div class="instagram">
        {{ content | safe }}
      </div>        
      {% elseif sections %}
      <div class="page_copy">
        {{ content | safe }}
      </div>
      <div class="content">{% for section in sections %}
        <section class="page-panel">
          <div class="image">
            <a href="{{ section.url }}">
              <img src="{{ section.sectionimage }}" alt="{{ section.title }}">
            </a>
          </div>
          <div class="title">
            <a href="{{ section.url }}">
              <h2>{{ section.title }}</h2>
            </a>
          </div>
          <div class="text">
            <a href="{{ section.url }}">
              <p>{{ section.body }}</p>
            </a>
            <a href="{{ section.url }}" class="cta">{{section.cta}}</a>
          </div>
        </section>{% endfor %}
      </div>
      {% else %}
      <div class="page_copy content_primary">
        {{ content | safe }}
        {% if cta and url %}
          <a href="{{ url }}">
            <button>
              {{ cta }}
            </button>            
          </a>
        {% endif %}
      </div>
      {% endif %}
    </main>
    <footer>     
      <div class="logo-address">
        <img src="{{ footerlinks.logo }}" alt="The Old Rectory Cursive Logo" />
        <a href="{{ mapurl | safe }}">{{ footerlinks.address | safe }}</a>
      </div>
      <ul class="secondary">
        {% for item in footerlinks.secondary %}
          <li>
            <a href="{{ item.url }}">{{ item.title | safe }}</a>
          </li>
        {% endfor %}  
      </ul>           
      <ul class="socials">
        {% for item in footerlinks.socials %}
          <li>
            <a href="{{ item.url }}">{{ item.icon | safe }}</a>
          </li>
        {% endfor %}
      </ul>
      <div class="newsletter">
        {{ footerlinks.newsletter | safe }}
      </div>
      <div class="certification">
        <img src="{{ footerlinks.certimage }}" alt="Certification" />
        <p>
          {{ footerlinks.certtitle | safe }}
        </p>
      </div>
      <div class="copyright">
        <p>
          {{ footerlinks.copyright | safe }} Site by <a href="https://timgilp.in">Tim Gilpin</a>
        </p>
      </div>
    </footer>
    <script>
      const overlay = document.querySelector('header nav');
      const hamburger = document.querySelector('.hamburger');
      const closeBtn = document.querySelector('.close-btn');
  
      hamburger.addEventListener('click', () => {
        overlay.classList.add('active');
        closeBtn.classList.add('active');
        hamburger.classList.remove('active');
      });
  
      closeBtn.addEventListener('click', () => {
        overlay.classList.remove('active');
        closeBtn.classList.remove('active');
        hamburger.classList.add('active');
      });
  
      // Close menu when clicking outside
      document.addEventListener('click', (e) => {
        if (!overlay.contains(e.target) && !hamburger.contains(e.target)) {
          overlay.classList.remove('active');
          closeBtn.classList.remove('active');
        }
      });
    </script> 
    {% if gallery %}
      <script>
      const swiper = new Swiper('.swiper', {
        // Optional parameters
        // direction: 'vertical',
        loop: true,
        // Navigation arrows
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
      });
      </script>                                                                    
    {% endif %}
  </body>
</html>
