<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - {{ settings.title }}</title>
    <meta name="description" content="{{ settings.description | default(settings.title) }}">
    <meta name="generator" content="{{ eleventy.generator }}">
    <link rel="icon" href="/favicon.ico" sizes="48x48">
    <link rel="icon" href="/favicon.svg" sizes="any" type="image/svg+xml">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ process.env.URL | default('http://localhost:8080') }}{{ page.url }}">
    <meta property="og:site_name" content="{{ settings.title }}">
    <meta property="og:locale" content="{{ settings.locale }}">
    <meta property="og:title" content="{{ settings.title }}">
    <meta property="og:description" content="{{ settings.description | default(settings.title) }}">
    <meta property="og:image" content="{{ settings.image }}">
    <meta property="og:image:width" content="{{ settings.imageWidth }}">
    <meta property="og:image:height" content="{{ settings.imageHeight }}">
    <meta property="og:image:alt" content="{{ settings.imageAlt }}">
    <link rel="stylesheet" href="/assets/css/style.css">
  </head>
  <body class="page_{{ title | slugify }}{% if type == 'page' %} page{% endif %}{% if parent_page %} subpage subpage_{{ parent_page | slugify }}{% endif %}  {% if gallery %}page_gallery{% endif %} {% if template %}template_{{ template | slugify }}{% endif %}">
    <header>
      <a href="/"><img src="{{ settings.logo }}" alt="{{ settings.name }}" /></a>
      <button class="hamburger active" aria-label="Open menu">
        <div></div>
        <div></div>
        <div></div>
      </button>      
      <span class="close-btn" id="close">&times;</span>      
      <nav aria-label="Main">
        <ul>
          {% for entry in collections.all | eleventyNavigation %}
              <li class="{% if entry.url == page.url %}active{% endif %} {{ entry.title | slugify }}">
                <a href="{{ entry.url }}">{{ entry.title }}</a>
              </li>
          {% endfor %}
        </ul>
      </nav>
      <img src="/assets/img/michelin-2024.png" alt="Michelin 2024" class="michelin">
    </header>
    <main>
      <header>
        <img src="{{ headerimage | default(home.headerimage) }}" alt="{{ title }}" class="hero" />
        {% if title == 'Home'  %}
          <img src="{{ home.headerlogo }}" class="logo">
        {% else %}
        <h1>
          {{ title }}
        </h1>
        {% endif %}
      </header>

      {% if title == 'Home'  %}
      <div class="content">{% for section in home.sections %}
        <section class="section-panel">
          <div class="image">
            <a href="{{ section.url }}">
              <img src="{{ section.sectionimage }}" alt="{{ section.title }}">
            </a>
          </div>
          <div class="title">
            <a href="{{ section.url }}">
              <h2>{{ section.title }}</h2>
            </a>
          </div>
          <div class="text">
            <a href="{{ section.url }}">
              <p>{{ section.body }}</p>
            </a>
            {% if section.cta and section.url %}
            <a href="{{ section.url }}" class="cta">{{section.cta}}</a>
            {% endif %}
          </div>
        </section>{% endfor %}        
      </div>
      <div class="instagram">
        {{ content | safe }}
      </div>        
      {% elseif sections %}
      <div class="page_copy">
        {{ content | safe }}
      </div>
      <div class="content section-content">{% for section in sections %}
        <section class="section-panel">
          <div class="image">
            {% if section.url %}<a href="{{ section.url }}">{% endif %}
              <img src="{{ section.sectionimage }}" alt="{{ section.title }}">
            {% if section.url %}</a>{% endif %}
          </div>
          <div class="title">
            {% if section.url %}<a href="{{ section.url }}">{% endif %}
              <h2>{{ section.title }}</h2>
            {% if section.url %}</a>{% endif %}
          </div>
          <div class="text">
            {% if section.url %}<a href="{{ section.url }}">{% endif %}
              {{ section.body | safe }}
            {% if section.url %}</a>{% endif %}
            {% if section.cta and section.url %}
            <a href="{{ section.url }}" class="cta">{{section.cta}}</a>
            {% endif %}
          </div>
        </section>{% endfor %}
      </div>
      {% if gallery %}
      <div class="gallery-wrapper">
        <div class="gallery">
          <ul>
            {% for item in gallery %}
              <li><img src="{{ item.image }}" alt="{{ title }} Gallery Photo"></li>
            {% endfor %}
          </ul>
        </div>
      </div>
      {% endif %}
      {% else %}
      <div class="content_primary main_content">
        {% if parent_page %}
          {% set navPages = collections.all | eleventyNavigationBreadcrumb(parent_page, { includeSelf: true }) %}
          <ul class="breadcrumbs">
          {% for entry in navPages %}
            <li><a href="/">Home</a></li>
            <li><a href="{{ entry.url }}">{{ entry.title }}</a></li>
            <li>{{ title }}</li>
          {% endfor %}
          </ul>
        {% endif %}
        {% if subhead %}
        <div class="content_sub">        
          <h2>{{ subhead | safe }}</h2>
        </div>
        {% endif %}
        <div class="content_text">        
          {{ content | safe }}
          {% if treatment.terms and parent_page == "Treatment Rooms" %}
            {{ treatment.terms | markdownify | safe }}
          {% endif %}
          {% if treatment.vouchers and parent_page == "Treatment Rooms" and title != "Gift Vouchers" %}
            {{ treatment.vouchers | markdownify | safe }}
          {% endif %}
          {% if cta and url %}
            <a href="{{ url }}" class="cta">
              {{ cta }}
            </a>
          {% endif %}
        </div>
        {% if gallery %}
        <div class="content_gallery">
          <div class="gallery">
            <ul>
              {% for item in gallery %}
                <li><img src="{{ item.image }}" alt="{{ title }} Gallery Photo"></li>
              {% endfor %}
            </ul>
          </div>
        </div>
        {% endif %}
      </div>
      {% endif %}
    </main>
    <footer>     
      <div class="logo-address">
        <img src="{{ footerlinks.logo }}" alt="The Old Rectory Cursive Logo" />
        <p>{{ footerlinks.address | safe }}</p>
      </div>
      <ul class="secondary">
        {% for item in footerlinks.secondary %}
          <li>
            <a href="{{ item.url }}">{{ item.title | safe }}</a>
          </li>
        {% endfor %}  
      </ul>           
      <ul class="socials">
        {% for item in footerlinks.socials %}
          <li>
            <a href="{{ item.url }}">{{ item.icon | safe }}</a>
          </li>
        {% endfor %}
      </ul>
      <div class="newsletter">
        {{ footerlinks.newsletter | safe }}
      </div>
      <div class="certification">
        <img src="{{ footerlinks.certimage }}" alt="Certification" />
        <p>
          {{ footerlinks.certtitle | safe }}
        </p>
      </div>
      <div class="copyright">
        <p>
          {{ footerlinks.copyright | safe }} Site by <a href="https://timgilp.in">Tim Gilpin</a>
        </p>
      </div>
    </footer>
    <script>
      const overlay = document.querySelector('header nav');
      const hamburger = document.querySelector('.hamburger');
      const closeBtn = document.querySelector('.close-btn');
  
      hamburger.addEventListener('click', () => {
        overlay.classList.add('active');
        closeBtn.classList.add('active');
        hamburger.classList.remove('active');
      });
  
      closeBtn.addEventListener('click', () => {
        overlay.classList.remove('active');
        closeBtn.classList.remove('active');
        hamburger.classList.add('active');
      });
  
      // Close menu when clicking outside
      document.addEventListener('click', (e) => {
        if (!overlay.contains(e.target) && !hamburger.contains(e.target)) {
          overlay.classList.remove('active');
          closeBtn.classList.remove('active');
        }
      });

      document.querySelector('.contact-form form').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent the default form submission
        console.log('Form submission prevented for debugging.');
        // Add your custom form handling logic here
      });
    </script> 
  </body>
</html>
